<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <com.rey.material.widget.Slider
        android:id="@+id/sliderImageShow"
        style="@style/Material.Widget.Slider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:paddingLeft="@dimen/layout_margin_16dp"
        android:paddingRight="@dimen/layout_margin_16dp"
        app:sl_maxValue="100"
        app:sl_minValue="0"
        app:sl_primaryColor="@color/text_title_color"
        app:sl_secondaryColor="@color/white"
        app:sl_textColor="@color/white"
        app:sl_textSize="16sp"
        app:sl_thumbFocusRadius="8dp"
        app:sl_thumbRadius="5dp"
        app:sl_transformAnimDuration="100"
        app:sl_travelAnimDuration="100"
        app:sl_value="50" />

    <TextView
        android:id="@+id/timeGifCurrent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sliderImageShow"
        android:layout_marginLeft="@dimen/layout_margin_12dp"
        android:text="00:00"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/timeGifEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/sliderImageShow"
        android:layout_marginRight="@dimen/layout_margin_12dp"
        android:text="01:00"
        android:textColor="@color/white" />

</RelativeLayout>