<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:gravity="center"
            android:id="@+id/group_sticker"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/layout_margin_10dp"
            android:textColor="@color/white"
            android:text="Stickers"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
            <android.support.design.widget.TabLayout
                android:layout_toRightOf="@+id/group_sticker"
                android:layout_marginLeft="30dp"
                android:tabStripEnabled="false"
                android:scrollbars="none"
                app:tabGravity="fill"
                app:tabMode="fixed"
                android:id="@+id/tab_layoutSticker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </android.support.design.widget.TabLayout>
    </RelativeLayout>
    <View

        android:layout_marginLeft="@dimen/layout_margin_10dp"
        android:layout_marginRight="@dimen/layout_margin_10dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_height_0.1dp"/>
   <android.support.v4.view.ViewPager
       android:id="@+id/viewpager_sticker"
       android:layout_width="match_parent"
       android:layout_height="match_parent">

   </android.support.v4.view.ViewPager>

</LinearLayout>